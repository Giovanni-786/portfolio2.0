{% extends "layout.njk" %}


{%block head%}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">

    <title>Conteudos</title>

{% endblock %}


{% block content %}
        
        <section>

            <div class="cards-curses">
            
            {%for course in courses.card_course%}
                
                <div class="card-course" id="{{course.id_course}}">
                    <div class="card-content">
                        <img src="{{course.card_url}}" alt="card-course">
                        <p><strong id="{{course.class_custom}}">{{course.description_custom}}</strong> {{course.description_default}}</p>
                        <p class = "status-pay">{{course.price_course}}</p>
                    </div>
                </div>

            {% endfor %}            
               

            </div>

        </section>

        <div class="course-modal-overlay">
            <div class="modal">
                
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <a  class="maximize-modal">
                    <span class="material-icons">
                        maximize
                    </span>
                </a>
              

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>

                </div>

            </div>

        </div>

        
   
        <script src="/scripts.js"></script>

{% endblock %}